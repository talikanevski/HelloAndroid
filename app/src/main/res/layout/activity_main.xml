<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="cursive"
            android:shadowColor="#00BCD4"
            android:shadowDx="12"
            android:shadowDy="12"
            android:shadowRadius="3"
            android:text="Get into your Creative Flow"
            android:textColor="#311B92"
            android:textSize="36sp"
            android:textStyle="bold">/</TextView>

        <TextView
            android:id="@+id/udacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/f"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-thin"
            android:shadowColor="#00BCD4"
            android:shadowDx="12"
            android:shadowDy="12"
            android:shadowRadius="3"
            android:text="UDACITY"
            android:textColor="#311B92"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/udacity"
            android:layout_centerHorizontal="true"
            android:fontFamily="cursive"
            android:shadowColor="#00BCD4"
            android:shadowDx="12"
            android:shadowDy="12"
            android:shadowRadius="3"
            android:text="2465 Latham St"
            android:textColor="#311B92"
            android:textSize="25sp"
            android:textStyle="bold"
            android:onClick="map"/>

        <TextView
            android:id="@+id/m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/l"
            android:layout_centerHorizontal="true"
            android:fontFamily="cursive"
            android:shadowColor="#00BCD4"
            android:shadowDx="12"
            android:shadowDy="12"
            android:shadowRadius="3"
            android:text="Mountain View, CA 94043"
            android:textColor="#311B92"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/m"
            android:layout_centerHorizontal="true"
            android:fontFamily="cursive"
            android:shadowColor="#00BCD4"
            android:shadowDx="12"
            android:shadowDy="12"
            android:shadowRadius="3"
            android:text="650-555-5555"
            android:textColor="#311B92"
            android:textSize="25sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/u1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/uda" />

        <ImageView
            android:id="@+id/u2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@id/u1"
            android:src="@drawable/uda" />

        <ImageView
            android:id="@+id/u3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/u1"
